<div class='d-flex justify-content-center align-items-center my-4 bg-danger'>
  <h1 class='p-2 text center text-white'> OTP CONFIRMATION AND CHANGE PASSOWRD</h1>
</div>

<%= form_with url: verify_user_forget_password_verify_otps_url, html: {class: 'w-100 d-flex justify-content-center align-items-center row'} do |form| %>
 <div class="form-group row justify-content-center">
  <%= form.label :otp_lable, "Enter the OTP", class: 'text-center p-2 text-secondary' %>
  <%= form.text_field :otp, class: 'w-25 form-control', value: params[:otp] %> 

  <%= form.label :password, "New Enter Password", class: 'text-center p-2 text-secondary'%>
  <%= form.text_field :password, class: 'w-25 form-control', required: true %>

  <%= form.label :password_confirmation, "New Password Confirmation", class: 'text-center p-2 text-secondary' %>
  <%= form.text_field :password_confirmation, class: 'w-25 form-control', required: true %>

  <div class="text-center">
      <%= form.submit "Submit", class: 'my-2 w-25 btn btn-primary justify-content-center' %>
  </div>
</div>
<% end %>